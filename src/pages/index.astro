---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('pages', 'home');
if (!entry) {
  throw new Error('Home content not found');
}
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description}>
  <div class="max-w-2xl mx-auto">
    <div class="mb-12 text-center">
      <h1 class="text-5xl md:text-6xl font-serif font-bold text-slate-900 mb-6 tracking-tight">
        {entry.data.title}
      </h1>
      <p class="text-xl md:text-2xl text-slate-600 font-light leading-relaxed mb-8">
        {entry.data.subtitle}
      </p>
      
      {entry.data.heroImage && (
        <div class="w-full overflow-hidden rounded-xl shadow-lg mb-12">
            <img 
                src={entry.data.heroImage} 
                alt={entry.data.title} 
                class="w-full h-auto max-h-[500px] object-cover"
            />
        </div>
      )}
    </div>
    
    <div class="prose prose-lg prose-slate mx-auto">
      <Content />
    </div>
  </div>
</Layout>
