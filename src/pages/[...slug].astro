---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

export async function getStaticPaths() {
  const entries = await getCollection('pages');
  return entries.map(entry => ({
    params: { slug: entry.slug === 'home' ? undefined : entry.slug }, 
    props: { entry },
  })).filter(path => path.params.slug !== undefined);
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description}>
  <article>
    <header class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{entry.data.title}</h1>
      {entry.data.subtitle && (
        <p class="text-xl text-slate-600 font-light">{entry.data.subtitle}</p>
      )}
    </header>
    <div class="prose prose-lg prose-slate max-w-none">
      <Content />
    </div>
  </article>
</Layout>
